#!/bin/sh

alias ls="ls -hN --color=auto --group-directories-first"
alias l="ls -ahls --color=auto"
alias sl="ls"
alias df="df -h"
alias rm="rm -v"
alias mv="mv -v"
alias cp="cp -v"
alias t="touch"
alias mkd="mkdir -pv"
alias mail="neomutt"
alias dd="dd status=progress"
alias YT="pipe-viewer"
alias free="free -h"
alias du="du -Sca"
alias evs="eval '$(ssh-agent -s)' && ssh-add ~/.ssh/anunna"
alias yt="yt-dlp --add-metadata -i"
alias yta="yt-dlp -x -f bestaudio/best"
alias ffmpeg="ffmpeg -hide_banner"
alias shred="shred -zf"
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias ccat="highlight --out-format=ansi"
alias dir="dir --color=auto"
alias wget="wget -c --user-agent 'noleak'"
alias ka="killall"
alias gcl="git clone"
alias gco="git commit -m"
alias gdi="git diff"
alias sdn="sudo shutdown -h now"
alias trem="transmission-remote"
alias f="$FILE"
alias v="vim ."
alias vim="vim"
alias e="sudo emerge -a"
alias er="sudo emerge -a --unmerge"
alias es="sudo emerge -s"
alias mpv="mpv --input-ipc-server=/tmp/mpvsoc$(date +%s)"
alias magit="vim -c MagitOnly"
alias ref="shortcuts >/dev/null; source ~/.config/shortcutrc"
alias nf="neofetch --ascii_distro gentoo"
alias fe="feh --bg-fill ~/.config/wall-face.png"
alias sn="sudo systemctl restart systemd-networkd iwd"
